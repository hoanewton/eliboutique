<p id="notice"><%= notice %></p>

<h4>All Products</h4>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image url</th>
      <th>Status</th>
      <th>Original price</th>
      <th>Marchandise price</th>
      <th>Logistic cost</th>
      <th>Material</th>
      <th>Color</th>
      <th>Size</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.image_url %></td>
        <td><%= product.status %></td>
        <td><%= product.original_price %></td>
        <td><%= product.marchandise_price %></td>
        <td><%= product.logistic_cost %></td>
        <td><%= product.material %></td>
        <td><%= product.color %></td>
        <td><%= product.size %></td>
        <td><%= product.note %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

